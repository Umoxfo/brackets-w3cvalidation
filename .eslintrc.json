{
    "root": true,
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": ["node"],
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "node/no-unsupported-features": [
            "error",
            {
                "version": 6
            }
        ],
        "node/no-deprecated-api": "error",
        "node/exports-style": [
            "error",
            "module.exports"
        ]
    }
}
